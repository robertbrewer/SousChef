<div class="jumbotron h1" style="color:white;"">Lets Cook!</div>
<p>Here are the recipes you've chosen:</p>

<% @meal.order_items.each do |key, value| %>
<ul>
	<% array = Recipe.find(key).instructions.split(".") %>
	<li><h1><strong><%= Recipe.find(key).name %></strong></h1></li>
	<% array.each do |instruction| %>
		<li><%= instruction %>.</li>
		<% end %>
</ul>


<span height='200px' id="theTime" class="timeClass">
 </span>

<script language="JavaScript" type="text/javascript">

var sec = 40;   // set the seconds
var min = 1;   // set the minutes

function countDown() {
   sec--;
  if (sec == -01) {
   sec = 59;
   min = min - 1; }
  else {
   min = min; }

if (sec<=9) { sec = "0" + sec; }

time = (min<=9 ? "0" + min : min) + " min and " + sec + " sec ";

document.getElementById('theTime').innerHTML =time;

SD=window.setTimeout("countDown();", 1000);

if (min == '00' && sec == '00') { sec = "00"; window.clearTimeout(SD); }
}
window.onload = countDown;
</script>

<style type="text/css">

 .timeClass {
  font-family:arial,verdana,helvetica,sans-serif;
  font-weight:normal;
  font-size:10pt;
  }

</style>

<!-- This goes into the BODY of the file -->

<% end %>

<p>
	<strong>Total Cook Time:</strong> <%= @meal.total_cook_time %>
</p>
